<div class="navbar-lewagon d-flex justify-content-between align-items-center">
  <h1><%="#{@cocktail.name}"%></h1>
  <%= link_to "All cocktails", cocktails_path, class: "btn btn-outline-secondary" %>
</div>

<div class="background">
  <ul>
  <%@cocktail.doses.each do |dose| %>
  <li>
  <%= dose.description%> of <%=dose.ingredient.name%>
  <%= link_to "Remove", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" }
       %>
  </li>
  <% end %>
  </ul>

  <h5>Add a dose</h5>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Add dose" %>
  <% end %>

</div>
