<div class="navbar-lewagon d-flex justify-content-between align-items-center">
  <h1><%="#{@cocktail.name}"%></h1>
  <%= link_to "All cocktails", cocktails_path, class: "btn btn-outline-secondary" %>
</div>

<div class="background text-white">
  <div class="container text-center pt-5">
    <div class="img-cocktail">
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill%>
    </div>
    <ul class ="list-ingredients">
    <%@cocktail.doses.each do |dose| %>
    <li>
    <%= dose.description%> of <%=dose.ingredient.name%>
    <%= link_to "Remove", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" }
         %>
    </li>
    <% end %>
    </ul>


 <div class="row justify-content-center pt-5">
    <div class="col-12 col-lg-6">
    <h5>Add a dose</h5>

      <%= simple_form_for([@cocktail, @dose]) do |f| %>
  <!--     <div class="form-group"> -->
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.association :ingredient %>
  <!--     </div> -->
        <%= f.submit "Add dose" %>
      <% end %>
    </div>
  </div>


  </div>
</div>
